<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Radio" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingLeft">@dimen/padding_margin_10</item>
        <item name="android:paddingRight">@dimen/padding_margin_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#455C7B</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/padding_margin_20</item>
        <item name="android:paddingBottom">@dimen/padding_margin_20</item>
        <item name="android:paddingTop">@dimen/padding_margin_20</item>
    </style>


    <style name="question_text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_textview_title_24</item>
        <item name="android:paddingBottom">@dimen/padding_margin_15</item>
        <item name="android:textColor">#fdd9be</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/radio_button_8</item>
        <item name="android:paddingTop">@dimen/radio_button_8</item>
        <item name="android:textColor">#fdd9be</item>
    </style>

    <style name="radio_button_no_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#fdd9be</item>
    </style>

    <style name="result_display_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/textview_spacing_2</item>
        <item name="android:paddingLeft">@dimen/padding_margin_10</item>
        <item name="android:layout_marginBottom">@dimen/radio_button_8</item>
        <item name="android:textSize">@dimen/small_textview_title_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bellow_buttons">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_margin_20</item>
        <item name="android:layout_marginRight">@dimen/padding_margin_20</item>
        <item name="android:textColor">#e5e7e9</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#455C7B</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fdd9be</item>
    </style>


</resources>
